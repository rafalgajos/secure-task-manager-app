<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="secure_task_manager_app.Views.LoginPage"
             Title="Login">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20">
        
        <!-- Logo SVG nad formularzem logowania -->
        <Image Source="logo.svg"
               HeightRequest="150"
               HorizontalOptions="Center" />

        <Label Text="Podaj nazwę użytkownika" FontSize="Medium" />
        <Entry x:Name="UsernameEntry" Placeholder="Nazwa użytkownika" />

        <Label Text="Podaj hasło" FontSize="Medium" />
        <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />

        <Button Text="Zaloguj i Synchronizuj" Clicked="OnLoginClicked" />

        <!-- Dodane pole tekstowe i przycisk rejestracji -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
            <Label Text="Nie masz konta?" VerticalOptions="Center" />
            <Button Text="Stwórz konto" Clicked="OnRegisterClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
