<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="secure_task_manager_app.Views.LoginPage"
             Title="Login">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20">

        <Label Text="Podaj nazwę użytkownika" FontSize="Medium" />
        <Entry x:Name="UsernameEntry" Placeholder="Nazwa użytkownika" />

        <Label Text="Podaj hasło" FontSize="Medium" />
        <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />

        <Button Text="Zaloguj i Synchronizuj" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
